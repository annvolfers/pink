{
  "name": "pink",
  "private": true,
  "description": "Личный проект «Pink» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.13",
    "browser-sync": "2.27.10",
    "del": "7.0.0",
    "eslint": "8.15.0",
    "eslint-config-htmlacademy": "6.0.0",
    "gulp": "4.0.2",
    "gulp-dart-sass": "1.0.2",
    "gulp-html-bemlinter": "2.1.2",
    "gulp-htmlmin": "5.0.1",
    "gulp-if": "3.0.0",
    "gulp-libsquoosh": "1.1.2",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "2.0.0",
    "gulp-svgmin": "4.1.0",
    "gulp-svgstore": "9.0.0",
    "gulp-terser": "2.1.0",
    "gulp-w3c-html-validator": "5.1.4",
    "postcss-csso": "6.0.1",
    "postcss-url": "10.1.3",
    "stylelint": "13.13.1",
    "stylelint-config-htmlacademy": "0.1.11"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\"",
    "eslint": "eslint \"source/js/\"",
    "lint": "npm run editorconfig && npm run stylelint && npm run eslint",
    "build": "gulp buildProd",
    "start": "gulp runDev"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "^16"
  },
  "type": "module"
}
